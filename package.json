{
  "name": "gameoflife",
  "version": "1.0.0",
  "description": "Conway's Game of Life - Interactive Web Simulation",
  "main": "golife.html",
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/user-event": "^14.6.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "collectCoverageFrom": [
      "golife-functions.test.js"
    ],
    "testMatch": ["**/golife-functions.test.js"],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
